package selenium;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

public class BaseClassTest {
	
	WebDriver driver;
	BaseClass page;

	@BeforeMethod
	public void setup() {

		String chromeDriverPath = "eclipse-workspace-new5/selenium/chromedriver-win64/chromedriver.exe";

        // Create ChromeOptions instance if needed
        ChromeOptions chromeOptions = new ChromeOptions();

        // Set the system property to use ChromeDriver
        System.setProperty("webdriver.chrome.driver", chromeDriverPath);

        // Initialize ChromeDriver with the specified options
        WebDriver driver = new ChromeDriver(chromeOptions);
//		System.setProperty("webdriver.chrome.driver",
			//	"C:\\Users\\acasa\\");
    	//if u download the please change the path here where you have this chrome driver 
		// u have the chromedriver inside the files in the project
		driver = new ChromeDriver();
		driver.get(
				"https://www.booking.com/index.ro.html?aid=2369661&pagename=ro-ro-booking-desktop&label=msn-B7x56xrVTCNcWVmBvA7CCw-80608133315310:tikwd-80608308432181:loc-224:neo:mte:lp140953:dec:qsbooking&utm_campaign=Romanian_Romania%20RO%20RO&utm_medium=cpc&utm_source=bing&utm_term=B7x56xrVTCNcWVmBvA7CCw&msclkid=e9016c273f1b113048d709ee65909013&utm_content=Booking%20-%20Desktop");

		page = new BaseClass(driver);
	}

	@Test(priority=1)
	public void SearchZbor() {
		page.goToLink();
	}   
	@AfterMethod
	public void tearDown() throws InterruptedException {
	
		driver.quit();
	}

}
